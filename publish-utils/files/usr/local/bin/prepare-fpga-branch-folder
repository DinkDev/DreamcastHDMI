#!/usr/bin/env python

from jinja2 import Environment, FileSystemLoader
from os import listdir, chdir, system, environ, stat
from os.path import isdir, isfile, join
from shutil import copy2 as copy
import datetime
import hashlib
import sys

BUF_SIZE = 65536  # lets read stuff in 64kb chunks!
def sha1version(filename):
    sha1 = hashlib.sha1()
    with open(filename, 'rb') as f:
        while True:
            data = f.read(BUF_SIZE)
            if not data:
                break
            sha1.update(data)
    return sha1.hexdigest()[:8]

def md5version(filename):
    md5 = hashlib.md5()
    with open(filename, 'rb') as f:
        while True:
            data = f.read(BUF_SIZE)
            if not data:
                break
            md5.update(data)
    return md5.hexdigest()[:8]

now = datetime.datetime.now().strftime("%Y-%m-%d %H:%M:%S")
variant = ""
sourcepart = ""
if len(sys.argv) > 1:
    sourcepart = sys.argv[1]
    variant = sourcepart + "-"
branch = variant + environ['CI_COMMIT_REF_NAME']
sourcedir = "Core/output_files/" + sourcepart
targetdir = "docroot/fw/" + branch

print("branch: " + branch)
print("sourcedir: " + sourcedir)
print("targetdir: " + targetdir)
system("mkdir -p " + targetdir)

if isdir(sourcedir):
    system("mv " + sourcedir + "/* " + targetdir + "/")
else:
    system("mv Core/output_files/* " + targetdir + "/")

jicfiles = [(f, md5version(targetdir + '/' + f), stat(targetdir + '/' + f).st_size) for f in listdir(targetdir) if f.endswith(".jic") or f.endswith(".rbf") or f.endswith(".dc")]
env = Environment(
    loader=FileSystemLoader('/usr/local/bin/templates'),
)

jicfiles.sort()
template = env.get_template('index.html.j2')
indexHtml = template.render(jicfiles=jicfiles, branch=environ['CI_COMMIT_REF_NAME'], lm=now)

with open(targetdir + "/index.html", "wb") as fh:
    fh.write(indexHtml)

print(targetdir)
chdir(targetdir)
system("md5sum *.jic > md5sum.txt")
system("sha1sum *.jic > sha1sum.txt")
system("md5sum *.rbf >> md5sum.txt")
system("sha1sum *.rbf >> sha1sum.txt")
system("md5sum *.dc >> md5sum.txt")
system("sha1sum *.dc >> sha1sum.txt")

print("generating md5 files")
ffs = [ f for f in listdir(targetdir) if f.endswith(".rbf") or f.endswith(".dc") ]
for ff in ffs:
    system("md5sum " + ff + " | awk '{print $1;}' > " + ff + ".md5")
