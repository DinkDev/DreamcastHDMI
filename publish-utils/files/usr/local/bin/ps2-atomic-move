#!/bin/sh

echo ${CI_COMMIT_REF_NAME}

# move in place
mv "/srv/incoming/ps2/${CI_COMMIT_REF_NAME}" "/srv/incoming/ps2/_old_${CI_COMMIT_REF_NAME}"
mv "/srv/incoming/ps2/_${CI_COMMIT_REF_NAME}" "/srv/incoming/ps2/${CI_COMMIT_REF_NAME}"
mv "/srv/incoming/ps2/index.html" "/srv/incoming/ps2/_old_index.html"
mv "/srv/incoming/ps2/_index.html" "/srv/incoming/ps2/index.html"

# cleanup
rm -rf "/srv/incoming/ps2/_old_${CI_COMMIT_REF_NAME}"
rm "/srv/incoming/ps2/_old_index.html"
